                    <relation name="skos:exactMatch" active="LIT6176MalkaSadeqanB" passive="https://w3id.org/malke/6176/"></relation>
                    <relation name="ecrm:P129_is_about" active="LIT6176MalkaSadeqanB" passive="PRS12530SadeqanBaraknaha"></relation>
